%h1.ui.header Sign Up
.ui.form
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.text_field :username, autofocus: true, class: 'ui input', placeholder: "Username"
    .field
      = f.text_field :name, autofocus: false, class: 'ui input', placeholder: "Full Name"
    .field
      = f.email_field :email, autofocus: false, class: 'ui input', placeholder: "Email Address"
    .field
      = f.password_field :password, autocomplete: "off", class: 'ui input', placeholder: 'Password'
    .field
      = f.password_field :password_confirmation, autocomplete: "off", class: 'ui input', placeholder: 'Confirm Password'
    .field
      = f.submit "Sign up", class: "ui primary button"
  .ui.divider
  = render "devise/shared/links"
